{
  "private": true,
  "name": "@viz/monorepo",
  "version": "0.0.0",
  "engines": {
    "yarn": ">=1.7.1 <2.x.x", 
    "node": "^12.22 || ^14.13 || >=16"
  },
  "resolutions": {
    "**/@types/node": "~12",
    "**/node-abi": "^2.18.0"
  },
  "devDependencies": {
    "@types/chai-string": "^1.4.0",
    "@types/jsdom": "^11.0.4",
    "@types/node": "12",
    "@types/sinon": "^10.0.6",
    "@types/temp": "^0.8.29",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1", 
    "husky": "^4.2.5", 
    "lint-staged": "^10.2.13", 
    "shell-quote": "^1.7.2",  
    "chai-string": "^1.4.0",
    "colors": "^1.4.0",
    "concurrently": "^3.5.0",
    "debug": "^4.3.2", 
    "eslint": "^7.14.0",
    "eslint-plugin-deprecation": "^1.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-no-unsanitized": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "ignore-styles": "^5.0.1",
    "jsdom": "^11.5.1",
    "lerna": "^4.0.0", 
    "glob":"^7.2.0",
    "execa":"^6.0.0",  
    "fs-extra": "^7.0.1",
    "cross-env": "^7.0.3",  
    "npm-run-all": "^4.1.5",
    "prettier": "~2.2.1",  
    "rimraf": "~3.0.0",
    "jest": "^26.4.2", 
    "@types/jest": "^26.0.10", 
    "ts-jest": "^26.3.0",  
    "temp": "^0.9.4",
    "tslint": "^5.12.0",
    "typedoc": "~0.22.10",
    "typedoc-plugin-external-module-map": "1.2.1",
    "node-gyp": "7.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "uuid": "^8.3.2",
    "yargs": "^15.3.1"
  },
  "scripts": {
    "prepare":"yarn compile:tsc", 
    "clean": "rimraf ./packages/*/lib",
    "clean:src": "lerna run clean --scope \"@viz/!(test-|example-)*\"",
    "clean:tests": "lerna run clean:tests",  
    "compile:tsc": "tsc -b",
    "lint": "lerna run lint",
    "lint:clean": "rimraf .eslintcache",
    "lint:oneshot": "ts-node --max-old-space-size=4096 node_modules/eslint/bin/eslint.js --cache=true \"{packages,examples}/**/*.{ts,tsx}\"", 
    "docs": "rimraf gh-pages/docs/next && typedoc --tsconfig configs/typedoc-tsconfig.json --options configs/typedoc.json",
    "test": "lerna run test \"@viz/!(example-)*\" --parallel",
    "rebuild:clean": "rimraf .browser_modules", 
    "publish:latest": "lerna publish --exact --yes --no-push --no-git-tag-version && yarn publish:check",
    "publish:next": "lerna publish preminor --exact --canary --preid next --dist-tag next --no-git-reset --no-git-tag-version --no-push --yes && yarn publish:check",
    "publish:check": "node scripts/check-publish.js",   
    "watch": "lerna run watch --scope \"@viz/!(example-)*\" --parallel",
    "rebuild:node": "node ./scripts/rebuild-native.js",
    "format": "prettier --write \"./**/*.{ts,tsx,json}\"",
    "format-check": "prettier --check \"./**/*.{ts,tsx,json}\""
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ]
}
