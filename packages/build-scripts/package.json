{
    "name": "@viz/build-scripts",
    "version": "0.0.1",
    "description": "Webpack build scripts for packages",
    "files": [
      "*" 
    ],
    "main": "index.js",
    "bin":{
        "vizext": "viz-ext.js",
        "run": "viz-run.js"
    },
    "monorepo-scripts": {
        "ext:clean": "vizext compile:clean && vizext lint:clean && vizext test:clean",
        "ext:build": "concurrently -n compile,lint -c blue,green \"vizext compile\" \"vizext lint\"",
        "ext:compile": "tsc -b tsconfig.json --verbose",
        "ext:compile:clean": "rimraf lib *.tsbuildinfo",
        "ext:compile:fast": "tsc -p",
        "ext:lint": "eslint --cache=true --no-error-on-unmatched-pattern=true \"{src,test}/**/*.{ts,tsx}\"",
        "ext:lint:clean": "rimraf .eslintcache",
        "ext:watch": "tsc -p tsconfig.json -w",
        "ext:watch:slow": "tsc -b tsconfig.json -w",
        "ext:test": "nyc mocha --opts ../../configs/mocha.opts \"./lib/**/*.*spec.js\"",
        "ext:test:watch": "mocha -w --opts ../../configs/mocha.opts \"./lib/**/*.*spec.js\"",
        "ext:test:clean": "rimraf .nyc_output coverage" 
    },
    "scripts": {
        "prepare": "echo 'skip'",
        "clean": "echo 'skip'",
        "build": "tsc -p tsconfig.json",
        "watch": "echo 'skip'",
        "test": "echo 'skip'",
        "docs": "echo 'skip'"
    },
    "dependencies": {
        "@babel/core": "^7.14.0",
        "@babel/plugin-transform-classes": "^7.14.0",
        "@babel/plugin-transform-runtime": "^7.14.0",
        "@babel/preset-env": "^7.14.0",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4", 
        "assert": "^2.0.0",
        "autoprefixer": "^10.2.4",
        "css-loader": "^6.2.0",
        "cssnano": "^4.1.10",
        "file-loader": "^6.2.0",  
        "fork-ts-checker-notifier-webpack-plugin": "^3.0.0",
        "fork-ts-checker-webpack-plugin": "^6.5.0",
        "mini-css-extract-plugin": "^1.3.5", 
        "postcss": "^8.2.4",
        "postcss-discard-comments": "^4.0.2",
        "postcss-loader": "^5.0.0",
        "process": "^0.11.10",
        "react-refresh": "^0.11.0",
        "react-refresh-typescript": "^2.0.2", 
        "source-map-loader": "^2.0.1",
        "source-map-support": "^0.5.19",
        "style-loader": "^2.0.0", 
        "ts-loader": "^9.2.5",
        "copy-webpack-plugin": "^8.1.1",
        "webpack": "^5.52.1",
        "webpack-bundle-analyzer": "^4.4.0",
        "webpack-cli": "^4.8.0",  
        "webpack-dev-server": "^4.1.1",
        "webpack-notifier": "^1.13.0",
        "html-webpack-plugin": "^5.3.2",
        "worker-loader": "^3.0.8", 
        "@types/fs-extra": "^4.0.2",
        "babel-loader": "^8.2.2",
        "buffer": "^6.0.3",
        "circular-dependency-plugin": "^5.2.2",
        "compression-webpack-plugin": "^9.0.0", 
        "fs-extra": "^4.0.2",
        "ignore-loader": "^0.1.2",
        "less": "^3.9.0",
        "less-loader": "^10.0.1",
        "setimmediate": "^1.0.5", 
        "umd-compat-loader": "^2.1.2", 
        "yargs": "^15.3.1"
    },
    "devDependencies": {
        
    },
    "author": "zhouguoqing",
